#!/bin/bash
set -e -o pipefail

echo "build_path = $BUILDKITE_BUILD_PATH"
echo "org_slug = $BUILDKITE_ORGANIZATION_SLUG"
echo "pipeline_slug = $BUILDKITE_PIPELINE_SLUG"

export BUILDKITE_BUILD_CHECKOUT_PATH="$BUILDKITE_BUILD_PATH/$BUILDKITE_ORGANIZATION_SLUG/$BUILDKITE_PIPELINE_SLUG"

echo "checkout_path = $BUILDKITE_BUILD_CHECKOUT_PATH"
